<%- include("header") -%>

<div class="compose-container container">
  <h1 class="page-header">Edit Anncouncments</h1>
  <p class="page-top-text"></p>
  <a class="btn btn-secondary mb-5" href="/compose">New Anncouncment</a>

  <ul class="list-group">
    <% for(var i = 0; i < posts.length; i++){ %>
    <li class="list-group-item justify-content-between align-items-center d-flex"> <%=posts[i].title%>
      <form action="/delete-post" method="post">
        <input style="display: none;" type="text" class="form-control" id="title-text-area" name="postID" value="<%=posts[i].id%>">
        <button class="btn btn-danger" type="submit" name="button">Delete</button>
      </form>
    </li>
    <% } %>

  </ul>


</div>

<%- include("footer") -%>
